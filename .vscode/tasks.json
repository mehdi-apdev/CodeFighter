{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build CodeFighters",
            "command": "C:/Program Files/CodeBlocks/MinGW/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/controllers/*.cpp",
                "${workspaceFolder}/src/models/*.cpp",
                "${workspaceFolder}/src/views/*.cpp",
                "${workspaceFolder}/src/states/*.cpp",
                "-o",
                "${workspaceFolder}/bin/Debug/CodeFighters.exe",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "${workspaceFolder}/src",
                "-I",
                "C:/SFML-2.5.1/include",
                "-L",
                "C:/SFML-2.5.1/lib",
                "-lsfml-graphics-d",
                "-lsfml-window-d",
                "-lsfml-system-d",
                "-lsfml-audio-d"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilation avec C:/SFML-2.5.1"
        }
    ]
}